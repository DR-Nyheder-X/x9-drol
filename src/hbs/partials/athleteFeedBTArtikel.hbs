<div class="athlete-feed-entry athlete-feed-entry--{{type}} {{#if breaking}}athlete-feed-entry--breaking{{/if}}">
	{{>athleteFeedEntryHeader target}}
	<div class="athlete-feed-entry__content">
		<div class="athlete-feed-entry__source">
			<span>Artikel om {{target.firstName}} fra </span>
			<h4 class="athlete-profile-social-label athlete-profile-social-label--{{type}}">BT</h4>
		</div>
		<p>{{{formatSocialContent data.content}}}</p>
		{{#if data.image}}
			<p class="athlete-feed-entry__content-image">
				<img src="{{data.image}}">
			</p>
		{{else}}
			<p><a href="#" class="button">Læs på bt.dk</a></p>
		{{/if}}
		{{#if unread}}
			<div class="athlete-feed-entry__new-indicator"></div>
		{{/if}}
		<div class="athlete-feed-entry__time">
			{{time}}
		</div>
	</div>
</div>
